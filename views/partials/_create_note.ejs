<form action="/" method="POST" enctype="multipart/form-data">
    <div class="entry_field">
        <label> Title<span> *</span> </label>
        <input type="text" name="title" value="Test Title" required>
    </div>
    <div class="entry_field">
        <label> Content<span> *</span> </label>
        <textarea type="text" name="content" id="content_textarea" required></textarea>
    </div>
    <div class="entry_field">
        <label> Link Youtube Video </label>
        <input type="text" name="youtube_video_url" id="create_youtube_video_url" placeholder="" pattern="^(http(s)?:\/\/)?((w){3}.)?youtu(be|.be)?(\.com)?\/.+" title='Only Youtube Video URLs are accepted'>
    </div>
    <div class="entry_field">
        <label> File upload </label>
        <input type="file" name="input_file">
    </div>
    <div class="required_indicator">
        <div><span>*</span><sub> indicates required</sub> </div>
    </div>
    <button type="submit">Create Note</button>
</form>

